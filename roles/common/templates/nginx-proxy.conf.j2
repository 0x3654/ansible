# Nginx proxy configuration for {{ common_nginx_server_name }}
# Managed by Ansible

server {
    listen 80;
    server_name {{ common_nginx_server_name }};
    {% if common_nginx_ssl_enabled | default(true) %}
    return 301 https://$server_name$request_uri;
    {% else %}
    # No SSL redirect
    {% endif %}
}

{% if common_nginx_ssl_enabled | default(true) %}
server {
    listen 443 ssl http2;
    server_name {{ common_nginx_server_name }};

    ssl_certificate {{ common_nginx_ssl_cert }};
    ssl_certificate_key {{ common_nginx_ssl_key }};
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
{% endif %}

    location / {
        proxy_pass http://127.0.0.1:{{ common_nginx_backend_port | default(3000) }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }
{% if common_nginx_ssl_enabled | default(true) %}
}
{% endif %}
