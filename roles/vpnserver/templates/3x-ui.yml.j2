---
# Конфигурация 3x-ui для {{ domain_name }}
domain_name: {{ domain_name }}
filename: 3x-ui_{{ domain_name }}.yml  # Параметр для имени выходного файла

server_info:
  location: "{{ city }}"  # Можно добавить местоположение сервера

panel:
  url: "https://{{ domain_name }}:{{ vpnserver_web_port }}/{{ vpnserver_web_base_path }}/"  # Автоматически формируемый URL
  username: {{ vpnserver_username }}
  password: {{ vpnserver_password }}

subscription:
  suburl: "https://{{ domain_name }}:{{ vpnserver_sub_port }}/{{ vpnserver_sub_path }}/"  # Автоматически формируемый URL
  suburlid: "https://{{ domain_name }}:{{ vpnserver_sub_port }}/{{ vpnserver_sub_path }}/{% if ruserv is defined and ruserv == 'true' %}{{vpnserver_inbound_sub_id_ru}}{% else %}{{vpnserver_inbound_sub_id}}{% endif %}"  # Автоматически формируемый URL
  subJsonPath: "{{ vpnserver_sub_json_path }}"  # Путь к JSON файлу подписки

# Метаданные для HTML-генерации
html_meta:
  title: "VPN Configuration for {{ domain_name }}"
  description: "Connection details for 3x-ui VPN on {{ domain_name }}"
  qr_code: true  # Флаг для генерации QR-кода в HTML
  output_filename: "vpn_config_{{ domain_name }}.html"  # Имя выходного HTML-файла
