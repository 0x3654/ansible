#!/bin/bash
# Kubernetes context switcher for DevOps

echo "ðŸ”§ Available Kubernetes contexts:"
kubectl config get-contexts -o name

echo ""
echo "Current context:"
kubectl config current-context

echo ""
if [ -n "$1" ]; then
  echo "Switching to: $1"
  kubectl config use-context "$1"
else
  echo "Usage: $0 <context-name>"
  echo ""
  echo "To list all contexts: kubectl config get-contexts"
fi
